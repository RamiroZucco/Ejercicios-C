#include <stdio.h>
#include <stdlib.h>
float mostrarNumero (float numeroIngresado);
float main(void) {
	setbuf(stdout,NULL);
	float numero;
	printf("Ingrese un numero");
	scanf("%d", &numero);
	mostrarNumero(numero);
	return EXIT_SUCCESS;
}
float mostrarNumero (float numeroIngresado)
{
	printf("El numero ingresado es %f",numeroIngresado);
	return numeroIngresado;
}
