#include <stdio.h>
#include <stdlib.h>
float mostrarNumero (float numeroIngresado);
int main(void) {
	setbuf(stdout,NULL);
	float resultado;
	resultado=mostrarNumero(resultado);
	printf("El numero ingresado es %f",resultado);
	return EXIT_SUCCESS;
}
float mostrarNumero (float numeroIngresado)
{
	printf("Ingrese un numero");
	scanf("%f", &numeroIngresado);
	return numeroIngresado;
}
