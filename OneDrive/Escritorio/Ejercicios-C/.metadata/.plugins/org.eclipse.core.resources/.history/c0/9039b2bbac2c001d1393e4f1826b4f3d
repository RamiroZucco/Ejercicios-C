#include <stdio.h>
#include <stdlib.h>
int mostrarNumero  (int numeroIngresado);
int main(void) {
	setbuf(stdout,NULL);
	int numero;
		printf("Ingrese un numero");
		mostrarNumero(numero);
		printf("%d",numero);
		return EXIT_SUCCESS;
}
int mostrarNumero (int numeroIngresado)
	{
		if(numeroIngresado%2==0)
		{
			return 0;

		}
		else
		{
			return 1;
		}
	}
