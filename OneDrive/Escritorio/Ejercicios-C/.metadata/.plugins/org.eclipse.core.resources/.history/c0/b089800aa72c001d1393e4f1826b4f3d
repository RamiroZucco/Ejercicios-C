#include <stdio.h>
#include <stdlib.h>
float pedirFlotante (float numeroIngresado);
int main(void) {
	setbuf(stdout,NULL);
	int numero;
	pedirFlotante(numero);
	printf("El numero ingresado es %f",numero);
	return EXIT_SUCCESS;
}
float pedirFlotante (float numeroIngresado)
{
	printf("Ingrese numero");
	return numeroIngresado;
}

