#include <stdio.h>
#include <stdlib.h>
int mostrarNumero  (int numeroIngresado);
int main(void) {
	setbuf(stdout,NULL);
	int numero;
	int resultado;
	printf("Ingrese numero");
	scanf("%d",&numero);
	resultado=mostrarNumero(numero);
	printf("La verificacion es %d",resultado);
	return EXIT_SUCCESS;
}
int mostrarNumero (int numeroIngresado)
{
	if(numeroIngresado%2==0)
	{
		return 0;

	}
	else
	{
		return 1;
	}
}
